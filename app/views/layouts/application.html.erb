<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/f058a256c9.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= link_to "Bookers", root_path %>
      <% if user_signed_in? %>
        <li>
          <%= link_to users_show_path(current_user.id) do %>
            <i class="fa-solid fa-house"></i>Home
          <% end %>
          <%= link_to users_index_path do %>
            <i class="fa-solid fa-users"></i>Users
          <% end %>
          <%= link_to books_index_path do %>
            <i class="fa-solid fa-book-open"></i>Books
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa-solid fa-right-from-bracket"></i>Log out
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to "Home", root_path %>
          <%= link_to "About", homes_about_path %>
          <%= link_to "Sign up", new_user_registration_path %>
          <%= link_to "Log in", new_user_session_path %>
        </li>
      <% end %>
    </header>

    <%= yield %>

    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>

  </body>
</html>
