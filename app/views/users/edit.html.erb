<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2>User info</h2>
      
      <% if @user.errors.any? %>
        <%= @user.errors.count %> error prohibited this obj from being<br>saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <p>Name</p>
          <%= f.text_field :name, class: "form-control" %>
          </div>
        <div class="form-group">
          <p>Image</p>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <p>Introduction</p>
          <%= f.text_area :introduction, class: "form-control mb-3" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>