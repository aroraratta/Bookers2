<%= render partial: 'users/userinfo', locals: { user: current_user, book: @book } %>

<h2>Books</h2>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <th>
        <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100, 100) %>
        <% end %>
      </th>
      <th><%= link_to book.title, book_path(book.id) %></th>
      <th><%= book.body %></th>
    </tr>
  <% end %>
</table>