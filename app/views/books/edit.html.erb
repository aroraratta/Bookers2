<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h1>Editing Book</h1>
      
      <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this obj from<br>being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <p>Title</p>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <p>Opinion</p>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
      <% end %>
      
      <div><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></div>
    </div>
  </div>
</div>