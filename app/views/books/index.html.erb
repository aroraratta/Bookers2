<%= render partial: 'users/userinfo', locals: { user: current_user, book: @book } %>

<h2>Books</h2>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <th><%= image_tag book.user.get_profile_image(100, 100) %></th>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
    </tr>
  <% end %>
</table>