<%= render partial: 'users/userinfo', locals: { user: current_user, book: Book.new } %>

<h2>Users</h2>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @users.each do |user| %>
        <td><%= image_tag user.get_profile_image(100, 100) %></td>
        <td><% user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      <% end %>
    </tr>
  </tbody>
</table>