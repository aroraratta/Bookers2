<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/f058a256c9.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= link_to "Bookers", root_path %>
      <% if user_signed_in? %>
        <ul class="list-unstyled">
          <li class="list-unstyled">
            <%= link_to user_path(current_user.id) do %>
              <i class="fa-solid fa-house"></i>Home
            <% end %>
          </li>
          <li class="list-unstyled">
            <%= link_to users_path do %>
              <i class="fa-solid fa-users"></i>Users
            <% end %>
          </li>
          <li>
            <%= link_to books_path do %>
              <i class="fa-solid fa-book-open"></i>Books
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"></i>Log out
            <% end %>
          </li>
        </ul>
      <% else %>
        <ul>
          <li>
            <%= link_to root_path do %>
              <i class="fa-solid fa-house"></i>Home
            <% end %>
          </li>
          <li>
            <%= link_to homes_about_path do %>
              <i class="fa-solid fa-link"></i>Adout
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path do %>
              <i class="fa-solid fa-user-plus"></i>Sign up
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path do %>
              <i class="fa-solid fa-right-from-bracket"></i>Log in
            <% end %>
          </li>
        </ul>
      <% end %>
    </header>

    <%= yield %>

    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>

  </body>
</html>
