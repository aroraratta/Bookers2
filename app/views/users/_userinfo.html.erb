<h2>User info</h2>

<div>
  <%= image_tag user.get_profile_image(100, 100) %>
</div>

<table>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
  </tr>
</table>

<%= link_to edit_user_path(user.id) do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>

<h2>New book</h2>
<%= form_with model: book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>